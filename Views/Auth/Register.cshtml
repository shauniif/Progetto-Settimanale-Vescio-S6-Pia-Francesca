@model Progetto_Settimanale_Vescio_Pia_Francesca.Models.AuthModel

@{
    ViewData["Title"] = "Register";
}

<h2 class="my-4 text-center">Register</h2>
<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title mb-4 text-center">Crea un nuovo dipendente</h5>
                <form asp-action="Register" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-3 text-center">
                        <label asp-for="Username" class="form-label" />
                        <input asp-for="Username" class="form-control" placeholder="Inserisci il tuo username" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="mb-3 text-center">
                        <label asp-for="Password" class="form-label" />
                        <input asp-for="Password" type="password" class="form-control" placeholder="Inserisci la tua password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-primary">Crea</button>
                        <a asp-controller="Auth" asp-action="Login" class="btn btn-link">Il dipendente è gia stato creato?</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary">Torna alla lista</a>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
