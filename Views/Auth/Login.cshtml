@model AuthModel
@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <h2 class="my-4 text-center">Login</h2>
    <form asp-action="Login" method="post">
        @Html.AntiForgeryToken()
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title mb-4 text-center">Accedi al tuo account</h5>
                        <div class="mb-3 text-center">
                            <label asp-for="Username" class="form-label" />
                            <input asp-for="Username" class="form-control" placeholder="Inserisci il tuo username" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="mb-3 text-center">
                            <label asp-for="Password" class="form-label" />
                            <input type="password" asp-for="Password" class="form-control" placeholder="Inserisci la tua password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-center">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>